{
  "clock": {
    "interval": 60,
    "format": "{:%H:%M|%d.%m}",
    "tooltip": false
  },

  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-muted": "󰝟 {volume}%",
    "on-click": "pavucontrol",
    "on-scroll-up": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+",
    "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-",
    "on-click-right": "/app/scripts/select-audio-sink.sh",
    "format-icons": {
        "default": ["󰕿", "󰖀", "󰕾"]
    }
  },

  "hyprland/language": {
    "format": "{}",
    "format-en": "US",
    "format-ru": "RU"
  }
}

